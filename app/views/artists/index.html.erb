<h1>Listing Artists</h1>
<%= link_to 'New artist', new_artist_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
 
  <% @artists.each do |artist| %>
    <tr>
      <td><%= artist.name %></td>
      <% if artist.isgroup %>
        <td>Group</td>
      <% else %>
        <td>Individual</td>
      <% end %>
      <td><%= link_to 'Show', artist_path(artist) %></td>
      <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
      <td><%= link_to 'Destroy', artist_path(artist),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back', welcome_index_path %>
